        "type": "Text",
        "config": {
          "label": "Site Name",
          "placeholder": "Studio"
        }
      },
      "logo": {
        "type": "Image",
        "config": {
          "label": "Logo",
          "constraint": {
            "width": 400,
            "height": 200
