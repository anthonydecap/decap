            "section_links": {
              "type": "Group",
              "config": {
                "label": "Section Links",
                "fields": {
                  "link_text": {
                    "type": "Text",
                    "config": {
                      "label": "Link Text",
                      "placeholder": "Our Work"
                    }
                  },
                  "link_url": {
                    "type": "Link",
                    "config": {
                      "label": "Link URL",
                      "placeholder": "/work",
                      "select": null
                    }
                  }
                }
              }
            }
          }
        }
      },
      "newsletter_title": {
        "type": "Text",
        "config": {
          "label": "Newsletter Title",
          "placeholder": "Newsletter"
        }
      },
      "newsletter_description": {
        "type": "Text",
