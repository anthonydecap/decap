{
  "id": "blog",
  "label": "Blog",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID",
          "placeholder": "blog-post-title"
        }
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "Blog post title",
          "allowTargetBlank": true,
          "single": "heading1"
        }
      },
      "excerpt": {
        "type": "StructuredText",
        "config": {
          "label": "Excerpt",
          "placeholder": "Brief description of the blog post",
          "allowTargetBlank": true,
          "single": "paragraph"
        }
      },
      "featured_image": {
        "type": "Image",
        "config": {
          "label": "Featured Image",
          "constraint": {
            "width": 1200,
            "height": 630
          },
          "thumbnails": [
            {
              "name": "thumbnail",
              "width": 400,
              "height": 300
            }
          ]
        }
      },
      "content": {
        "type": "StructuredText",
        "config": {
          "label": "Content",
          "placeholder": "Write your blog post content here...",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl",
          "labels": ["codespan", "highlight"]
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "content": {
              "type": "SharedSlice"
            },
            "feature": {
              "type": "SharedSlice"
            },
            "testimonial": {
              "type": "SharedSlice"
            },
            "contact_section": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "Author": {
      "author_name": {
        "type": "Text",
        "config": {
          "label": "Author Name",
          "placeholder": "John Doe"
        }
      },
      "author_role": {
        "type": "Text",
        "config": {
          "label": "Author Role",
          "placeholder": "Senior Developer"
        }
      },
      "author_image": {
        "type": "Image",
        "config": {
          "label": "Author Image",
          "constraint": {
            "width": 200,
            "height": 200
          },
          "thumbnails": []
        }
      }
    },
    "Meta": {
      "published_date": {
        "type": "Date",
        "config": {
          "label": "Published Date",
          "placeholder": ""
        }
      },
      "tags": {
        "type": "Group",
        "config": {
          "label": "Tags",
          "fields": {
            "tag": {
              "type": "Text",
              "config": {
                "label": "Tag",
                "placeholder": "Technology"
              }
            }
          }
        }
      },
      "reading_time": {
        "type": "Number",
        "config": {
          "label": "Reading Time (minutes)",
          "placeholder": "5"
        }
      }
    },
    "SEO": {
      "meta_title": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": "Blog post title for SEO"
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": "Brief description for search engines"
        }
      },
      "meta_image": {
        "type": "Image",
        "config": {
          "label": "Meta Image",
          "constraint": {
            "width": 1200,
            "height": 630
          },
          "thumbnails": []
        }
      }
    }
  }
}
