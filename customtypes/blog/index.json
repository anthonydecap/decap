{
  "id": "blog",
  "label": "Blog",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": { "label": "UID", "placeholder": "blog-post-title" }
      },
      "title": {
        "type": "StructuredText",
        "config": { "label": "Title", "placeholder": "Blog post title", "allowTargetBlank": true, "single": "heading1" }
      },
      "excerpt": {
        "type": "StructuredText",
        "config": { "label": "Excerpt", "placeholder": "Brief description", "allowTargetBlank": true, "single": "paragraph" }
      },
      "card_image": {
        "type": "Image",
        "config": { "label": "Card Image", "placeholder": "Image for cards/listings", "constraint": {}, "thumbnails": [] }
      },
      "featured_image": {
        "type": "Image",
        "config": { "label": "Featured Image (post header)", "constraint": { "width": 1200, "height": 630 }, "thumbnails": [{ "name": "thumbnail", "width": 400, "height": 300 }] }
      },
      "published_date": {
        "type": "Date",
        "config": { "label": "Published Date", "placeholder": "" }
      },
      "type": {
        "type": "Select",
        "config": { "label": "Type", "placeholder": "Blog type", "options": ["smartvalve", "general"] }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "blog_rich_text": { "type": "SharedSlice" },
            "blog_image": { "type": "SharedSlice" },
            "blog_quote": { "type": "SharedSlice" },
            "blog_cta": { "type": "SharedSlice" },
            "blog_related_posts": { "type": "SharedSlice" }
          }
        }
      }
    },
    "Author": {
      "author_name": { "type": "Text", "config": { "label": "Author Name", "placeholder": "John Doe" } },
      "author_role": { "type": "Text", "config": { "label": "Author Role", "placeholder": "Writer" } },
      "author_image": { "type": "Image", "config": { "label": "Author Image", "constraint": { "width": 200, "height": 200 }, "thumbnails": [] } }
    },
    "Meta": {
      "tags": {
        "type": "Group",
        "config": { "label": "Tags", "fields": { "tag": { "type": "Text", "config": { "label": "Tag", "placeholder": "Technology" } } } }
      },
      "reading_time": { "type": "Number", "config": { "label": "Reading Time (minutes)", "placeholder": "5" } }
    },
    "SEO": {
      "meta_title": { "type": "Text", "config": { "label": "Meta Title", "placeholder": "Blog post title for SEO" } },
      "meta_description": { "type": "Text", "config": { "label": "Meta Description", "placeholder": "Brief description for search engines" } },
      "meta_image": { "type": "Image", "config": { "label": "Meta Image", "constraint": { "width": 1200, "height": 630 }, "thumbnails": [] } }
    }
  }
}
