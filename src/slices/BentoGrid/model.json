{
  "id": "bento_grid",
  "type": "SharedSlice",
  "name": "BentoGrid",
  "description": "Bento grid layout for showcasing products with different sized cards",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Default BentoGrid",
      "imageUrl": "",
      "primary": {
        "title": {
          "type": "Text",
          "config": {
            "label": "Section Title",
            "placeholder": "Our Premium Microphones"
          }
        },
        "eyebrow": {
          "type": "Text",
          "config": {
            "label": "Eyebrow",
            "placeholder": "Professional Audio"
          }
        },
        "description": {
          "type": "StructuredText",
          "config": {
            "label": "Description",
            "placeholder": "Discover our range of professional-grade microphones...",
            "allowTargetBlank": true,
            "multi": "paragraph,strong,em,hyperlink"
          }
        }
      },
      "items": {
        "item_title": {
          "type": "Text",
          "config": {
            "label": "Product Title",
            "placeholder": "B-6 Pro Microphone"
          }
        },
        "item_description": {
          "type": "StructuredText",
          "config": {
            "label": "Product Description",
            "placeholder": "High-end condenser microphone with...",
            "allowTargetBlank": true,
            "multi": "paragraph,strong,em,hyperlink"
          }
        },
        "item_image": {
          "type": "Image",
          "config": {
            "label": "Product Image",
            "constraint": {
              "width": 800,
              "height": 600
            },
            "thumbnails": [
              {
                "name": "thumbnail",
                "width": 400,
                "height": 300
              }
            ]
          }
        },
        "item_price": {
          "type": "Text",
          "config": {
            "label": "Price",
            "placeholder": "$2,999"
          }
        },
        "item_badge": {
          "type": "Text",
          "config": {
            "label": "Badge",
            "placeholder": "New"
          }
        },
        "item_link": {
          "type": "Link",
          "config": {
            "label": "Product Link",
            "placeholder": "Link to product page",
            "allowTargetBlank": true
          }
        },
        "item_size": {
          "type": "Select",
          "config": {
            "label": "Grid Size",
            "placeholder": "Select grid size",
            "options": [
              "small",
              "medium",
              "large"
            ]
          }
        }
      }
    }
  ]
} 