{
  "id": "feature",
  "type": "SharedSlice",
  "name": "Feature",
  "description": "Feature section with icons and descriptions for highlighting product features",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Default Feature Section",
      "imageUrl": "",
      "primary": {
        "title": {
          "type": "Text",
          "config": {
            "label": "Section Title",
            "placeholder": "Why Choose Our Microphones"
          }
        },
        "eyebrow": {
          "type": "Text",
          "config": {
            "label": "Eyebrow",
            "placeholder": "Professional Features"
          }
        },
        "description": {
          "type": "StructuredText",
          "config": {
            "label": "Description",
            "placeholder": "Discover what makes our microphones stand out...",
            "allowTargetBlank": true,
            "multi": "paragraph,strong,em,hyperlink"
          }
        },
        "invert": {
          "type": "Boolean",
          "config": {
            "label": "Invert Colors",
            "default_value": false,
            "placeholder_false": "Light theme",
            "placeholder_true": "Dark theme"
          }
        }
      },
      "items": {
        "feature_title": {
          "type": "Text",
          "config": {
            "label": "Feature Title",
            "placeholder": "Studio-Grade Quality"
          }
        },
        "feature_description": {
          "type": "StructuredText",
          "config": {
            "label": "Feature Description",
            "placeholder": "Professional audio quality with crystal clear sound...",
            "allowTargetBlank": true,
            "multi": "paragraph,strong,em,hyperlink"
          }
        },
        "feature_icon": {
          "type": "Select",
          "config": {
            "label": "Feature Icon",
            "placeholder": "Select an icon",
            "options": [
              "microphone",
              "waveform",
              "settings",
              "shield",
              "star",
              "lightning",
              "headphones",
              "volume",
              "music",
              "record"
            ]
          }
        },
        "feature_link": {
          "type": "Link",
          "config": {
            "label": "Feature Link",
            "placeholder": "Optional link for more details",
            "allowTargetBlank": true
          }
        }
      }
    }
  ]
} 