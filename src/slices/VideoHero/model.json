{
  "id": "video_hero",
  "type": "SharedSlice",
  "name": "VideoHero",
  "description": "Hero section with looping video background, title, subtitle, and centered button",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Default VideoHero",
      "imageUrl": "",
      "primary": {
        "title": {
          "type": "Text",
          "config": {
            "label": "Main Title",
            "placeholder": "Your Main Title Here"
          }
        },
        "subtitle": {
          "type": "StructuredText",
          "config": {
            "label": "Subtitle",
            "placeholder": "Your subtitle or description...",
            "allowTargetBlank": true,
            "multi": "paragraph,strong,em,hyperlink"
          }
        },
        "button_text": {
          "type": "Text",
          "config": {
            "label": "Button Text",
            "placeholder": "Get Started"
          }
        },
        "button_link": {
          "type": "Link",
          "config": {
            "label": "Button Link",
            "placeholder": "Where should the button link to?",
            "allowTargetBlank": true,
            "select": null
          }
        },
        "background_video": {
          "type": "Link",
          "config": {
            "label": "Background Video",
            "placeholder": "Upload or link to a video file",
            "allowTargetBlank": false,
            "select": null
          }
        },
        "overlay_opacity": {
          "type": "Select",
          "config": {
            "label": "Overlay Opacity",
            "placeholder": "Select overlay darkness",
            "options": [
              "light",
              "medium",
              "dark"
            ]
          }
        }
      },
      "items": {}
    }
  ]
}
