{
  "id": "youtube_video",
  "type": "SharedSlice",
  "name": "YouTubeVideo",
  "description": "YouTube video with title and description in a split layout",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Default YouTubeVideo",
      "imageUrl": "",
      "primary": {
        "title": {
          "type": "StructuredText",
          "config": {
            "label": "Title",
            "placeholder": "Video title",
            "allowTargetBlank": true,
            "multi": "paragraph,strong,em,hyperlink,heading1,heading2,heading3,heading4,heading5,heading6"
          }
        },
        "description": {
          "type": "StructuredText",
          "config": {
            "label": "Description",
            "placeholder": "Video description",
            "allowTargetBlank": true,
            "multi": "paragraph,strong,em,hyperlink,list-item,o-list-item"
          }
        },
        "youtube_url": {
          "type": "Text",
          "config": {
            "label": "YouTube URL",
            "placeholder": "https://www.youtube.com/watch?v=..."
          }
        },
        "video_position": {
          "type": "Select",
          "config": {
            "label": "Video Position",
            "placeholder": "Select video position",
            "options": [
              "left",
              "right"
            ]
          }
        },
        "video_size": {
          "type": "Select",
          "config": {
            "label": "Video Size",
            "placeholder": "Select video size",
            "options": [
              "small",
              "medium",
              "large"
            ]
          }
        }
      },
      "items": {}
    }
  ]
}
