{
  "id": "valve_tech_description",
  "type": "SharedSlice",
  "name": "Valve Tech Description",
  "description": "SmartValve technical specifications with Apple-style design for displaying mechanical and electrical properties",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Default Valve Tech Description Section",
      "imageUrl": "",
      "primary": {
        "title": {
          "type": "Text",
          "config": {
            "label": "Section Title",
            "placeholder": "SmartValve Specifications"
          }
        },
        "eyebrow": {
          "type": "Text",
          "config": {
            "label": "Eyebrow",
            "placeholder": "Technical Properties"
          }
        },
        "description": {
          "type": "StructuredText",
          "config": {
            "label": "Description",
            "placeholder": "Complete technical specifications for the SmartValve system...",
            "allowTargetBlank": true,
            "multi": "paragraph,strong,em,hyperlink"
          }
        },
        "invert": {
          "type": "Boolean",
          "config": {
            "label": "Invert Colors",
            "default_value": false,
            "placeholder_false": "Light theme",
            "placeholder_true": "Dark theme"
          }
        },
        "layout_style": {
          "type": "Select",
          "config": {
            "label": "Layout Style",
            "placeholder": "Choose layout style",
            "options": [
              "two_column",
              "single_column",
              "cards"
            ]
          }
        }
      },
      "items": {
        "property_category": {
          "type": "Text",
          "config": {
            "label": "Property Category",
            "placeholder": "Mechanical Properties"
          }
        },
        "property_name": {
          "type": "Text",
          "config": {
            "label": "Property Name",
            "placeholder": "Weight"
          }
        },
        "property_value": {
          "type": "Text",
          "config": {
            "label": "Property Value",
            "placeholder": "0.1 kg"
          }
        },
        "property_description": {
          "type": "StructuredText",
          "config": {
            "label": "Property Description",
            "placeholder": "Optional additional details about this property...",
            "allowTargetBlank": true,
            "multi": "paragraph,strong,em,hyperlink"
          }
        },
        "property_icon": {
          "type": "Select",
          "config": {
            "label": "Property Icon",
            "placeholder": "Select an icon",
            "options": [
              "weight",
              "dimensions",
              "height",
              "power",
              "voltage",
              "current",
              "resistance",
              "electronics",
              "motor",
              "none"
            ]
          }
        },
        "highlight": {
          "type": "Boolean",
          "config": {
            "label": "Highlight Property",
            "default_value": false,
            "placeholder_false": "Normal",
            "placeholder_true": "Highlighted"
          }
        }
      }
    }
  ]
}

