{
  "id": "artists",
  "type": "SharedSlice",
  "name": "Artists",
  "description": "Artists section with title, description, and artist cards",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Default Artists",
      "primary": {
        "title": {
          "type": "Text",
          "config": {
            "label": "Title",
            "placeholder": "Meet Our Artists"
          }
        },
        "description": {
          "type": "StructuredText",
          "config": {
            "label": "Description",
            "placeholder": "A description of our talented artists...",
            "multi": "paragraph,strong,em"
          }
        }
      },
      "items": {
        "artist_name": {
          "type": "Text",
          "config": {
            "label": "Artist Name",
            "placeholder": "John Doe"
          }
        },
        "artist_role": {
          "type": "Text",
          "config": {
            "label": "Artist Role",
            "placeholder": "Visual Artist"
          }
        },
        "artist_portrait": {
          "type": "Image",
          "config": {
            "label": "Artist Portrait",
            "constraint": {
              "width": 400,
              "height": 500
            },
            "thumbnails": []
          }
        }
      }
    }
  ]
} 