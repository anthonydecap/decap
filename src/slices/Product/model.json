{
  "id": "product",
  "type": "SharedSlice",
  "name": "Product",
  "description": "Product slice with add to cart functionality",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Default",
      "imageUrl": "",
      "primary": {
        "product_name": {
          "type": "Text",
          "config": {
            "label": "Product Name",
            "placeholder": "Enter product name"
          }
        },
        "product_description": {
          "type": "StructuredText",
          "config": {
            "label": "Product Description",
            "placeholder": "Enter product description",
            "allowTargetBlank": true,
            "single": "paragraph,strong,em,hyperlink,list-item,o-list-item"
          }
        },
        "product_price": {
          "type": "Number",
          "config": {
            "label": "Product Price",
            "placeholder": "Enter price (e.g., 29.99)"
          }
        },
        "product_image": {
          "type": "Image",
          "config": {
            "label": "Product Image",
            "constraint": {
              "width": 400,
              "height": 400
            },
            "thumbnails": []
          }
        },
        "currency": {
          "type": "Select",
          "config": {
            "label": "Currency",
            "placeholder": "Select currency",
            "options": [
              "USD",
              "EUR",
              "GBP"
            ],
            "default_value": "USD"
          }
        },
        "product_id": {
          "type": "Text",
          "config": {
            "label": "Product ID",
            "placeholder": "Enter unique product ID"
          }
        },
        "product_weight": {
          "type": "Number",
          "config": {
            "label": "Product Weight (kg)",
            "placeholder": "Enter weight in kilograms (e.g., 0.5)"
          }
        }
      },
      "items": {}
    }
  ]
} 