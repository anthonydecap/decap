{
  "id": "image_showcase",
  "type": "SharedSlice",
  "name": "ImageShowcase",
  "description": "Image showcase with different layouts and shapes",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Default ImageShowcase",
      "imageUrl": "",
      "primary": {
        "title": {
          "type": "Text",
          "config": {
            "label": "Section Title",
            "placeholder": "Our Work"
          }
        },
        "eyebrow": {
          "type": "Text",
          "config": {
            "label": "Eyebrow",
            "placeholder": "Portfolio"
          }
        },
        "description": {
          "type": "StructuredText",
          "config": {
            "label": "Description",
            "placeholder": "Showcase your work with style...",
            "allowTargetBlank": true,
            "multi": "paragraph,strong,em,hyperlink"
          }
        },
        "invert": {
          "type": "Boolean",
          "config": {
            "label": "Invert Colors",
            "placeholder": "Invert the color scheme"
          }
        },
        "layout": {
          "type": "Select",
          "config": {
            "label": "Layout",
            "placeholder": "Select layout",
            "options": [
              "hero",
              "showcase",
              "zigzag"
            ]
          }
        },
        "style": {
          "type": "Select",
          "config": {
            "label": "Style",
            "placeholder": "Select style",
            "options": [
              "modern",
              "classic",
              "minimal"
            ]
          }
        }
      },
      "items": {
        "image": {
          "type": "Image",
          "config": {
            "label": "Image",
            "constraint": {
              "width": 800,
              "height": 600
            },
            "thumbnails": [
              {
                "name": "thumbnail",
                "width": 400,
                "height": 300
              }
            ]
          }
        },
        "title": {
          "type": "Text",
          "config": {
            "label": "Title",
            "placeholder": "Project Title"
          }
        },
        "description": {
          "type": "StructuredText",
          "config": {
            "label": "Description",
            "placeholder": "Project description...",
            "allowTargetBlank": true,
            "multi": "paragraph,strong,em,hyperlink"
          }
        },
        "image_shape": {
          "type": "Select",
          "config": {
            "label": "Image Shape",
            "placeholder": "Select shape",
            "options": [
              "rounded",
              "circle",
              "hexagon",
              "diamond",
              "wave",
              "triangle"
            ]
          }
        },
        "link": {
          "type": "Link",
          "config": {
            "label": "Link",
            "placeholder": "Link to project",
            "allowTargetBlank": true
          }
        },
        "link_text": {
          "type": "Text",
          "config": {
            "label": "Link Text",
            "placeholder": "View Project"
          }
        }
      }
    }
  ]
} 