{
  "id": "image_gallery",
  "type": "SharedSlice",
  "name": "ImageGallery",
  "description": "Image gallery with different layout options",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Default ImageGallery",
      "imageUrl": "",
      "primary": {
        "title": {
          "type": "Text",
          "config": {
            "label": "Section Title",
            "placeholder": "Our Gallery"
          }
        },
        "eyebrow": {
          "type": "Text",
          "config": {
            "label": "Eyebrow",
            "placeholder": "Portfolio"
          }
        },
        "description": {
          "type": "StructuredText",
          "config": {
            "label": "Description",
            "placeholder": "Explore our collection of images...",
            "allowTargetBlank": true,
            "multi": "paragraph,strong,em,hyperlink"
          }
        },
        "invert": {
          "type": "Boolean",
          "config": {
            "label": "Invert Colors",
            "placeholder": "Invert the color scheme"
          }
        },
        "layout": {
          "type": "Select",
          "config": {
            "label": "Layout",
            "placeholder": "Select layout",
            "options": [
              "grid",
              "masonry",
              "carousel",
              "mosaic"
            ]
          }
        },
        "columns": {
          "type": "Select",
          "config": {
            "label": "Columns",
            "placeholder": "Select number of columns",
            "options": [
              "2",
              "3",
              "4",
              "5"
            ]
          }
        }
      },
      "items": {
        "image": {
          "type": "Image",
          "config": {
            "label": "Image",
            "constraint": {
              "width": 800,
              "height": 600
            },
            "thumbnails": [
              {
                "name": "thumbnail",
                "width": 400,
                "height": 300
              }
            ]
          }
        },
        "title": {
          "type": "Text",
          "config": {
            "label": "Title",
            "placeholder": "Image Title"
          }
        },
        "description": {
          "type": "StructuredText",
          "config": {
            "label": "Description",
            "placeholder": "Image description...",
            "allowTargetBlank": true,
            "multi": "paragraph,strong,em,hyperlink"
          }
        },
        "badge": {
          "type": "Text",
          "config": {
            "label": "Badge",
            "placeholder": "New"
          }
        },
        "link": {
          "type": "Link",
          "config": {
            "label": "Link",
            "placeholder": "Link to image",
            "allowTargetBlank": true
          }
        },
        "link_text": {
          "type": "Text",
          "config": {
            "label": "Link Text",
            "placeholder": "View"
          }
        }
      }
    }
  ]
} 