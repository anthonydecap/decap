{
  "id": "content",
  "type": "SharedSlice",
  "name": "Content",
  "description": "Flexible content section with rich text and media",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Default Content Section",
      "imageUrl": "",
      "primary": {
        "title": {
          "type": "Text",
          "config": {
            "label": "Section Title",
            "placeholder": "About Our Technology"
          }
        },
        "eyebrow": {
          "type": "Text",
          "config": {
            "label": "Eyebrow",
            "placeholder": "Innovation"
          }
        },
        "content": {
          "type": "StructuredText",
          "config": {
            "label": "Content",
            "placeholder": "Write your content here...",
            "allowTargetBlank": true,
            "multi": "paragraph,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,list-item,o-list-item,preformatted"
          }
        },
        "image": {
          "type": "Image",
          "config": {
            "label": "Featured Image",
            "constraint": {
              "width": 1200,
              "height": 800
            },
            "thumbnails": [
              {
                "name": "thumbnail",
                "width": 400,
                "height": 300
              }
            ]
          }
        },
        "image_position": {
          "type": "Select",
          "config": {
            "label": "Image Position",
            "placeholder": "Select image position",
            "options": [
              "left",
              "right",
              "top",
              "bottom"
            ]
          }
        },
        "background_color": {
          "type": "Select",
          "config": {
            "label": "Background Color",
            "placeholder": "Select background",
            "options": [
              "white",
              "gray",
              "dark"
            ]
          }
        },
        "call_to_action": {
          "type": "Link",
          "config": {
            "label": "Call to Action",
            "placeholder": "Optional CTA link",
            "allowTargetBlank": true
          }
        },
        "cta_text": {
          "type": "Text",
          "config": {
            "label": "CTA Text",
            "placeholder": "Learn More"
          }
        }
      },
      "items": {}
    }
  ]
} 