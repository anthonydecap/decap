{
  "id": "optical_midi",
  "type": "SharedSlice",
  "name": "Optical MIDI",
  "description": "Apple-style product section for Optical MIDI cable with two-column layout, features, stats, and product image",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Default Optical MIDI Section",
      "imageUrl": "",
      "primary": {
        "eyebrow_left": {
          "type": "Text",
          "config": {
            "label": "Left Eyebrow Badge",
            "placeholder": "SmARTvalve"
          }
        },
        "eyebrow_right": {
          "type": "Text",
          "config": {
            "label": "Right Eyebrow Badge",
            "placeholder": "Optical MIDI"
          }
        },
        "headline": {
          "type": "Text",
          "config": {
            "label": "Main Headline",
            "placeholder": "High-speed Optical MIDI. Precision you can hear."
          }
        },
        "subheadline": {
          "type": "Text",
          "config": {
            "label": "Subheadline",
            "placeholder": "A minimal connector. Massive bandwidth. Designed for modern, per-note control."
          }
        },
        "product_image": {
          "type": "Image",
          "config": {
            "label": "Product Image",
            "constraint": {},
            "thumbnails": []
          }
        },
        "footnote": {
          "type": "StructuredText",
          "config": {
            "label": "Footnote",
            "placeholder": "Explanation text below stats...",
            "allowTargetBlank": true,
            "multi": "paragraph,strong,em,hyperlink"
          }
        },
        "invert": {
          "type": "Boolean",
          "config": {
            "label": "Invert Colors",
            "default_value": false,
            "placeholder_false": "Light theme",
            "placeholder_true": "Dark theme"
          }
        }
      },
      "items": {
        "content_type": {
          "type": "Select",
          "config": {
            "label": "Content Type",
            "placeholder": "Select content type",
            "options": [
              "feature",
              "bullet",
              "stat"
            ]
          }
        },
        "feature_title": {
          "type": "Text",
          "config": {
            "label": "Feature Title",
            "placeholder": "MIDI Compatibility"
          }
        },
        "feature_description": {
          "type": "StructuredText",
          "config": {
            "label": "Feature Description",
            "placeholder": "Uses MIDI 1.0 as extensive as possible...",
            "allowTargetBlank": true,
            "multi": "paragraph,strong,em,hyperlink"
          }
        },
        "bullet_text": {
          "type": "StructuredText",
          "config": {
            "label": "Bullet Point",
            "placeholder": "Bullet point text...",
            "allowTargetBlank": true,
            "multi": "paragraph,strong,em,hyperlink"
          }
        },
        "stat_kicker": {
          "type": "Text",
          "config": {
            "label": "Stat Kicker",
            "placeholder": "Link speed"
          }
        },
        "stat_value": {
          "type": "Text",
          "config": {
            "label": "Stat Value",
            "placeholder": "300,000"
          }
        },
        "stat_unit": {
          "type": "Text",
          "config": {
            "label": "Stat Unit",
            "placeholder": "bytes/sec"
          }
        }
      }
    }
