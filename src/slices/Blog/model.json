{
  "id": "blog",
  "type": "SharedSlice",
  "name": "Blog",
  "description": "Blog section for showcasing articles and posts",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Default Blog Section",
      "imageUrl": "",
      "primary": {
        "title": {
          "type": "Text",
          "config": {
            "label": "Section Title",
            "placeholder": "Latest Articles"
          }
        },
        "eyebrow": {
          "type": "Text",
          "config": {
            "label": "Eyebrow",
            "placeholder": "Blog"
          }
        },
        "description": {
          "type": "StructuredText",
          "config": {
            "label": "Description",
            "placeholder": "Stay updated with the latest news and insights from the audio world...",
            "allowTargetBlank": true,
            "multi": "paragraph,strong,em,hyperlink"
          }
        },
        "view_all_link": {
          "type": "Link",
          "config": {
            "label": "View All Link",
            "placeholder": "Link to blog page",
            "allowTargetBlank": true
          }
        }
      },
      "items": {
        "post_title": {
          "type": "Text",
          "config": {
            "label": "Post Title",
            "placeholder": "The Future of Professional Audio"
          }
        },
        "post_excerpt": {
          "type": "StructuredText",
          "config": {
            "label": "Post Excerpt",
            "placeholder": "Explore the latest trends and innovations in professional audio technology...",
            "allowTargetBlank": true,
            "multi": "paragraph,strong,em"
          }
        },
        "post_image": {
          "type": "Image",
          "config": {
            "label": "Post Image",
            "constraint": {
              "width": 800,
              "height": 600
            },
            "thumbnails": [
              {
                "name": "thumbnail",
                "width": 400,
                "height": 300
              }
            ]
          }
        },
        "post_date": {
          "type": "Date",
          "config": {
            "label": "Post Date"
          }
        },
        "post_category": {
          "type": "Text",
          "config": {
            "label": "Category",
            "placeholder": "Technology"
          }
        },
        "post_link": {
          "type": "Link",
          "config": {
            "label": "Post Link",
            "placeholder": "Link to full article",
            "allowTargetBlank": true
          }
        },
        "featured": {
          "type": "Boolean",
          "config": {
            "label": "Featured Post",
            "default_value": false,
            "placeholder_false": "Normal post",
            "placeholder_true": "Featured post"
          }
        }
      }
    }
  ]
} 