{
  "id": "three_d",
  "type": "SharedSlice",
  "name": "ThreeD",
  "description": "3D model display with scroll-based animations",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Default 3D Model Section",
      "imageUrl": "",
      "primary": {
        "title": {
          "type": "Text",
          "config": {
            "label": "Section Title",
            "placeholder": "Experience Our Microphones in 3D"
          }
        },
        "eyebrow": {
          "type": "Text",
          "config": {
            "label": "Eyebrow",
            "placeholder": "Interactive"
          }
        },
        "description": {
          "type": "StructuredText",
          "config": {
            "label": "Description",
            "placeholder": "Explore our microphones in stunning 3D detail...",
            "allowTargetBlank": true,
            "multi": "paragraph,strong,em,hyperlink"
          }
        },
        "model_file": {
          "type": "Link",
          "config": {
            "label": "3D Model File (FBX)",
            "placeholder": "Upload your FBX file",
            "allowTargetBlank": false,
            "select": "media"
          }
        },
        "animation_type": {
          "type": "Select",
          "config": {
            "label": "Animation Type",
            "placeholder": "Select animation style",
            "options": [
              "float",
              "rotate_complex",
              "wave",
              "parallax",
              "zoom_rotate",
              "spiral"
            ]
          }
        },
        "animation_speed": {
          "type": "Select",
          "config": {
            "label": "Animation Speed",
            "placeholder": "Select speed",
            "options": [
              "slow",
              "medium",
              "fast"
            ]
          }
        },
        "background_color": {
          "type": "Select",
          "config": {
            "label": "Background",
            "placeholder": "Select background",
            "options": [
              "transparent",
              "dark",
              "gradient"
            ]
          }
        },
        "lighting": {
          "type": "Select",
          "config": {
            "label": "Lighting Setup",
            "placeholder": "Select lighting",
            "options": [
              "studio",
              "dramatic",
              "soft",
              "environment"
            ]
          }
        },
        "camera_angle": {
          "type": "Select",
          "config": {
            "label": "Camera Angle",
            "placeholder": "Select camera view",
            "options": [
              "front",
              "side",
              "angle",
              "top"
            ]
          }
        },
        "enable_auto_rotation": {
          "type": "Boolean",
          "config": {
            "label": "Enable Auto Rotation",
            "default_value": true,
            "placeholder_false": "Static on load",
            "placeholder_true": "Auto rotate on load"
          }
        },
        "scroll_intensity": {
          "type": "Number",
          "config": {
            "label": "Scroll Animation Intensity",
            "placeholder": "1.0",
            "min": 0.1,
            "max": 3.0,
            "step": 0.1
          }
        }
      },
      "items": {}
    }
  ]
} 